{
  "name": "learn-node",
  "version": "1.0.0",
  "description": "A modern Node.js microservice for learning containerization and Kubernetes deployment",
  "main": "dist/main.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsx main.ts",
    "dev:watch": "nodemon",
    "test": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/.bin/jest --coverage",
    "lint": "eslint *.ts",
    "lint:fix": "eslint *.ts --fix",
    "format": "prettier --write '*.ts'",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t learn-node .",
    "docker:run": "docker run -p 3000:3000 learn-node",
    "k8s:deploy": "kubectl apply -f k8s/",
    "health-check": "curl -f http://localhost:3000/healthz || exit 1"
  },
  "keywords": [
    "nodejs",
    "microservice",
    "kubernetes",
    "docker",
    "containerization",
    "openshift",
    "devops"
  ],
  "author": "Daniel Ramirez <dxas90@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "helmet": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.209.0",
    "@opentelemetry/auto-instrumentations-node": "^0.67.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.209.0",
    "prom-client": "^15.1.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^30.0.0",
    "supertest": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.1.1",
    "@eslint/js": "^9.0.0",
    "typescript": "^5.7.2",
    "@types/node": "^24.0.0",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "ts-jest": "^29.2.5",
    "@typescript-eslint/parser": "^8.18.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dxas90/learn-node.git"
  },
  "bugs": {
    "url": "https://github.com/dxas90/learn-node/issues"
  },
  "homepage": "https://github.com/dxas90/learn-node#readme"
}
