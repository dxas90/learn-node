{
  "name": "learn-node",
  "version": "1.0.0",
  "description": "A modern Node.js microservice for learning containerization and Kubernetes deployment",
  "main": "main.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node main.js",
    "dev": "nodemon main.js",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "test:watch": "node --experimental-vm-modules node_modules/.bin/jest --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/.bin/jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write *.js",
    "docker:build": "docker build -t learn-node .",
    "docker:run": "docker run -p 3000:3000 learn-node",
    "k8s:deploy": "kubectl apply -f k8s/",
    "health-check": "curl -f http://localhost:3000/healthz || exit 1"
  },
  "keywords": [
    "nodejs",
    "microservice",
    "kubernetes",
    "docker",
    "containerization",
    "openshift",
    "devops"
  ],
  "author": "Daniel Ramirez <dxas90@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "helmet": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^30.0.0",
    "supertest": "^7.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.1.1",
    "@eslint/js": "^9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dxas90/learn-node.git"
  },
  "bugs": {
    "url": "https://github.com/dxas90/learn-node/issues"
  },
  "homepage": "https://github.com/dxas90/learn-node#readme"
}
